<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.dl.mediapicker.view.SquareImageView
        android:id="@+id/iv_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/ll_video_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_space5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">
        <ImageView
            android:id="@+id/iv_video_flag"
            android:layout_width="@dimen/width_space25"
            android:layout_height="@dimen/width_space25"
            android:src="@drawable/ic_video_flag" />
        <TextView
            android:id="@+id/tv_video_duration"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_space10"
            android:textSize="@dimen/text_size16"
            android:textColor="@color/whiteFont"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cb_media"
        android:layout_width="@dimen/width_space25"
        android:layout_height="@dimen/width_space25"
        android:layout_alignParentRight="true"
        android:background="@drawable/img_select_checkbox"
        android:button="@null"
        android:layout_margin="@dimen/margin_space5" />
</RelativeLayout>